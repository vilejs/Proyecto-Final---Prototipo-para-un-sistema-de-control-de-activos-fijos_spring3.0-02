<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="caPU" transaction-type="RESOURCE_LOCAL">
    <class>com.controlactivos.modelo.entidades.Departamentos</class>
    <class>com.controlactivos.modelo.entidades.Partes</class>
    <class>com.controlactivos.modelo.entidades.Mantenimientos</class>
    <class>com.controlactivos.modelo.entidades.Usuarios</class>
    <class>com.controlactivos.modelo.entidades.Items</class>
    <class>com.controlactivos.modelo.entidades.Perfil</class>
    <class>com.controlactivos.modelo.entidades.Users</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Control_Activos"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="vile2011"/>
      <property name="javax.persistence.jdbc.show_sql" value="true" /> 
      <property name="javax.persistence.schema-generation.database.action" value="create" />
    </properties>
  </persistence-unit>
</persistence>
